# ========================================
# Neural Plugin System Configuration
# ========================================
# Copy this file to .env and update with your values

# Application Environment
FASTAPI_ENV=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Settings
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION_USE_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication
# Set to true to enable authentication (recommended for production)
ENABLE_AUTH=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100

# Docker Service Configuration
PDF2HTMLEX_SERVICE_HOST=pdf2htmlex-service

# Storage Paths
DATA_DIR=/app/data
DOWNLOADS_DIR=/app/data/downloads
CHAINS_DIR=/app/data/chains
TEMPLATES_DIR=/app/data/templates

# ========================================
# Production Recommendations
# ========================================
# For production deployments:
# 1. Set ENABLE_AUTH=true
# 2. Generate a strong SECRET_KEY (use: openssl rand -hex 32)
# 3. Set FASTAPI_ENV=production
# 4. Set DEBUG=false
# 5. Adjust RATE_LIMIT_PER_MINUTE based on your needs
# 6. Configure MAX_UPLOAD_SIZE_MB appropriately
# 7. Set LOG_FORMAT=json for structured logging
# 8. Review and restrict CORS settings in app/main.py
